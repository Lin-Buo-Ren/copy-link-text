{
  "description": "Copy the text of the link.",
  "manifest_version": 2,
  "name": "Copy Link Text",
  "version": "1.5.1",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "{b144be59-6bdc-41e0-9141-9f8d00373d93}",
      "strict_min_version": "56.0"
    }
  },

  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "activeTab",
    "notifications"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["inject.js"],
    "run_at": "document_start",
    "all_frames": true,
    "match_about_blank": true
  }]
}
